<%= form_with model: @user do |form| %>
<div class="form-group">
    <%= form.label :username, 'Write Username:' %>
    <%= form.text_field :username, placeholder: 'eg. John Doe',class: 'form-control' %>
</div>
<div class="form-group">
    <%= form.label :email, 'Write email:' %>
    <%= form.email_field :email, placeholder: 'eg. John@doe.com',class: 'form-control' %>
</div>
<div class="form-group">
    <%= form.label :password, 'Write password:' %>
    <%= form.password_field :password, placeholder: 'eg. 123456',class: 'form-control' %>
</div>
<div class="text-center">
    <%= link_to 'back', root_path, class: 'btn btn-secondary'%>
    <%= form.submit 'Create', class: 'btn btn-primary'%>
</div>
<% end %>